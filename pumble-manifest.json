{
  "display_information": {
    "name": "Meeting Scheduler",
    "description": "Schedule meetings with CalDAV integration and ICS email invites",
    "background_color": "#4A90E2",
    "long_description": "Schedule meetings directly from Pumble with calendar integration. Sends ICS email invites to both internal and external attendees, syncs with CalDAV calendars (Thunderbird, Nextcloud, iCloud), and manages meeting updates and cancellations."
  },
  "features": {
    "bot_user": {
      "display_name": "Meeting Scheduler Bot",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/schedule-meeting",
        "url": "https://squishy-declan-uninhumed.ngrok-free.dev/slack/events",
        "description": "Create a new meeting with calendar invite",
        "usage_hint": "/schedule-meeting",
        "should_escape": false
      },
      {
        "command": "/list-meetings",
        "url": "https://squishy-declan-uninhumed.ngrok-free.dev/slack/events",
        "description": "List your scheduled meetings",
        "usage_hint": "/list-meetings",
        "should_escape": false
      },
      {
        "command": "/cancel-meeting",
        "url": "https://squishy-declan-uninhumed.ngrok-free.dev/slack/events",
        "description": "Cancel a scheduled meeting",
        "usage_hint": "/cancel-meeting [meeting-id]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "commands",
        "users:read",
        "channels:read",
        "im:read",
        "im:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://squishy-declan-uninhumed.ngrok-free.dev/slack/events",
      "bot_events": [
        "app_home_opened",
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": true,
      "request_url": "https://squishy-declan-uninhumed.ngrok-free.dev/slack/events"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false
  }
}
